{
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/update-profits",
      "schedule": "*/2 * * * *"
    }
  ],
  "build": {
    "env": {
      "MONGODB_URI": "@mongodb_uri",
      "NEXTAUTH_URL": "@nextauth_url",
      "NEXTAUTH_SECRET": "@nextauth_secret",
      "SMTP_HOST": "@smtp_host",
      "SMTP_PORT": "@smtp_port",
      "SMTP_USER": "@smtp_user",
      "SMTP_PASS": "@smtp_pass",
      "EMAIL_USER": "@email_user",
      "EMAIL_PASSWORD": "@email_password",
      "JWT_SECRET": "@jwt_secret"
    }
  }
} 